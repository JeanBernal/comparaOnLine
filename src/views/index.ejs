
<%- include('./partials/_header'); %>

    <h1>ComparaOnLine</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/dev/save" method="POST">
                            <div class="form-group">
                                <input type="text" name="name" placeholder="Title" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="sellIn" placeholder="SellIn" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="price" placeholder="Price" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary"> 
                                Save
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Sell In</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < products.length; i++){ %>
                            <tr>
                                <td><%= products[i].name %></td>
                                <td><%= products[i].sellIn %></td>
                                <td><%= products[i].price %></td>
                                <td>
                                    <a href="dev/delete/<%= products[i]._id %>" class="btn btn-danger">Delete</a>
                                    <a href="dev/update/<%= products[i]._id %>" class="btn btn-info">Update</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include('./partials/_footer'); %>